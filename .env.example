# ── Backend ──────────────────────────────────────────────
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_CORS_ORIGINS=http://localhost:5173

# Polymarket Builder Credentials
# Obtain from: polymarket.com/settings?tab=builder
POLYMARKET_BUILDER_API_KEY=your_builder_api_key
POLYMARKET_BUILDER_SECRET=your_builder_secret
POLYMARKET_BUILDER_PASSPHRASE=your_builder_passphrase

# ── Database & Cache ─────────────────────────────────────
# Local dev (docker-compose): use defaults below
# Production: Supabase Postgres + Upstash Redis
#   DATABASE_URL=postgresql+asyncpg://<user>:<pass>@<host>:5432/postgres
#   REDIS_URL=rediss://default:<pass>@<host>:6379
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/polyscoop
REDIS_URL=redis://localhost:6379/0

# Polymarket "mentions" tag slug for market discovery
MENTIONS_TAG_SLUG=mention-markets

# ── Frontend ─────────────────────────────────────────────
VITE_API_URL=http://localhost:8000
VITE_POLYGON_RPC_URL=https://polygon-rpc.com
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id
